{
  "packages": [
    "docs",
    "components/*"
  ],
  "command": {
    "bootstrap": {
      "forceLocal": true
    },
    "publish": {
      "allowBranch": ["main", "dev", "hotfix/*"],
      "preDistTag": "next",
      "message": "chore(release): publish"
    },
    "version": {
      "changelogPreset": "conventionalcommits",
      "conventionalCommits": true,
      "exact": true
    }
  },
  "registry": "https://registry.npmjs.org/",
  "version": "independent"
}
